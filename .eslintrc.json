{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": "warn",
        "no-tabs": "error",
        "indent": ["error", 2],
        "prefer-const": "error",
        "no-unused-vars": "error",
        "no-unreachable": "error",
        "quotes": ["warn", "double"],
        "jsx-quotes": ["error", "prefer-double"]
    }
}
